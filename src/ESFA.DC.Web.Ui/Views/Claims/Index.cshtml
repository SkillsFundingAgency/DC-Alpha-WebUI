@{
    ViewBag.Title = "Submit an ILR as training provider";
    ViewBag.PageId = "home-page";
    ViewBag.HideNavBar = true;
}


<div class="grid-row">
    <div class="column-full">
        <div class="govuk-box-highlight">
            <h1 class="heading-large">
                User Claims
            </h1>
        </div>
        <table class="table table-font-xsmall ">
            <thead>
                <tr>
                    <th>Key</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in User.Claims)
                {
                    <tr>
                        <td style="width:80%">@Html.DisplayFor(model => claim.Type)</td>
                        <td style="width:20%;">@Html.DisplayFor(model => claim.Value)</td>
                    </tr>

                }
            </tbody>
        </table>
        <p><a class="button" href="/IlrSubmission" role="button" id="upload-complete-button">Finished</a></p>
    </div>
</div>
